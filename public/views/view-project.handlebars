<div class="row">
    <h2><span class="fa">&#xf15b;</span> {{ displayName }}</h2>
</div>
<div class="row">
    <ul class="breadcrumb">
        <li><a href="/#/">Начало</a></li>
        <li><a href="/#/projects">Обекти</a></li>
        <li class="active">{{ displayName }}</li>
    </ul>
</div>
<div class="row">
    <div class="col-md-6">
        <h3><span class="fa">&#xf05a;</span> Информация</h3>
        <table id="project-details" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Поле</th>
                    <th>Стойност</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Година</td>
                    <td>{{ year }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3><span class="fa">&#xf07b;</span> Файлове</h3>
        <div class="list-group">
            {{#each data as |value key|}}
            <a href="/#/project/edit/{{ ../displayName }}/{{ ../id }}/layer/{{ key }}" class="list-group-item">
                <p class="list-group-item-text"><span class="fa">&#xf1c9;</span> {{ value }}</p>
            </a>
            {{/each}}
        </div>
        <div class="row text-right">
            <a href="/#/project/add/{{ displayName }}/{{ id }}" class="btn btn-primary"><span class="fa">&#xf067;</span> Добавяне</a>
        </div>
    </div>
</div>